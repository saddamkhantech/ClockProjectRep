<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/check_box_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/city_flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/check_box_first_activity"
        android:layout_toRightOf="@id/check_box_first_activity" />

    <TextView
        android:id="@+id/city_tv_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/city_flag_tv"
        android:layout_toRightOf="@+id/city_flag_tv"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_diff_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_tv_first_activity"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/city_flag_tv"
        android:layout_toRightOf="@id/city_tv_first_activity"
        android:textColor="#6d6d6d" />

    <TextView
        android:id="@+id/time_tv_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>